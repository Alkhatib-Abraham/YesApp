<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/loginEmailEdiText"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/errorMsg4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invalid Email, Please try again"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/loginPasswordEdiText"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:password="true"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/errorMsg5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password must be at least 6 digits"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:text="Login"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToRegisterActivity"
        android:text="Register"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/resetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="Forget your password?"
        android:onClick="resetPassword"
        android:textColor="@color/colorPrimaryDark" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>